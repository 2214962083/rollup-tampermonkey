{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "es2015",
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["scripts", "src", "types", "*.js", "*.ts"],
  "exclude": ["node_modules", "lib", "es", "dist"]
}
